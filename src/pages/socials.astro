  <style is:global>
    .page-card {
      background: rgba(160, 90, 60, 0.45);
      border: 1px solid rgba(200, 140, 100, 0.35);
      border-radius: 24px;
      padding: 2rem;
      backdrop-filter: blur(8px);
    }

    @media (min-width: 768px) {
      .page-card {
        padding: 3rem;
      }
    }

    .page-card .card {
      background: rgba(30, 25, 20, 0.7) !important;
      border-color: rgba(122, 158, 159, 0.3) !important;
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Goodreads widget styling */
    .goodreads-card {
      min-height: 150px;
    }

    .goodreads-widget h2 {
      display: none !important;
    }

    .goodreads-widget {
      background: transparent !important;
    }

    .goodreads-widget a {
      color: #7A9E9F !important;
    }

    .goodreads-widget a:hover {
      color: #fff !important;
    }

    #gr_custom_widget {
      background: transparent;
    }

    #gr_custom_widget .gr_custom_header {
      display: none;
    }

    #gr_custom_widget .gr_custom_container {
      display: flex !important;
      overflow-x: auto;
      overflow-y: hidden;
      gap: 1rem;
      scrollbar-width: thin;
      scrollbar-color: rgba(122, 158, 159, 0.5) transparent;
      padding-bottom: 0.5rem;
    }

    #gr_custom_widget .gr_custom_container::-webkit-scrollbar {
      height: 6px;
    }

    #gr_custom_widget .gr_custom_container::-webkit-scrollbar-track {
      background: rgba(255,255,255,0.05);
      border-radius: 4px;
    }

    #gr_custom_widget .gr_custom_container::-webkit-scrollbar-thumb {
      background: rgba(122, 158, 159, 0.5);
      border-radius: 4px;
    }

    #gr_custom_widget .gr_custom_each_container {
      border: none !important;
      padding: 0.5rem 0 !important;
      flex-shrink: 0;
      min-width: 200px;
    }

    #gr_custom_widget .gr_custom_title a,
    #gr_custom_widget .gr_custom_author a {
      color: #fff !important;
    }

    #gr_custom_widget .gr_custom_author {
      color: rgba(255,255,255,0.6) !important;
    }

    /* Tautulli watch history */
    .watch-scroll-wrapper {
      width: 100%;
      overflow-x: auto;
      overflow-y: hidden;
      scrollbar-width: thin;
      scrollbar-color: rgba(122, 158, 159, 0.5) transparent;
    }

    .watch-scroll-wrapper::-webkit-scrollbar {
      height: 8px;
    }

    .watch-scroll-wrapper::-webkit-scrollbar-track {
      background: rgba(255,255,255,0.05);
      border-radius: 4px;
    }

    .watch-scroll-wrapper::-webkit-scrollbar-thumb {
      background: rgba(122, 158, 159, 0.5);
      border-radius: 4px;
    }

    .watch-container {
      display: inline-flex;
      flex-direction: row;
      flex-wrap: nowrap;
      gap: 1rem;
      padding: 0.5rem 0;
      min-width: max-content;
    }

    .watch-item {
      flex: 0 0 auto;
      width: 120px;
      text-align: center;
    }

    .watch-poster {
      width: 120px;
      height: 180px;
      object-fit: cover;
      border-radius: 8px;
      background: rgba(255,255,255,0.1);
      margin-bottom: 0.5rem;
    }

    .watch-info {
      padding: 0 0.25rem;
    }

    .watch-title {
      color: #fff;
      font-weight: 400;
      font-size: 0.875rem;
      margin-bottom: 0.25rem;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .watch-meta {
      color: rgba(255,255,255,0.5);
      font-size: 0.75rem;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
  </style>

  <script>
    async function loadWatchHistory() {
      const container = document.getElementById('tautulli-history');
      if (!container) return;

      try {
        const response = await fetch('/api/tautulli');
        const data = await response.json();
        console.log('Tautulli API response:', data);

        if (data.response?.data?.data && data.response.data.data.length > 0) {
          const history = data.response.data.data;
          container.innerHTML = `<div class="watch-container">${history.map((item: any) => {
            const isTV = item.media_type === 'episode';
            const title = isTV
              ? `${item.grandparent_title}`
              : item.title;
            const subtitle = isTV
              ? `S${item.parent_media_index}E${item.media_index}`
              : item.year;

            return `
              <div class="watch-item">
                <img
                  src="${item.thumb ? `https://tautulli.kyoshiisland.com/pms_image_proxy?img=${item.thumb}&width=280&height=400` : ''}"
                  alt="${title}"
                  class="watch-poster"
                  onerror="this.style.display='none'"
                />
                <div class="watch-info">
                  <div class="watch-title">${title}</div>
                  <div class="watch-meta">${subtitle}</div>
                </div>
              </div>
            `;
          }).join('')}</div>`;
        } else {
          container.innerHTML = '<p class="text-white/50 text-sm">No recent watches found.</p>';
        }
      } catch (error) {
        console.error('Failed to load watch history:', error);
        container.innerHTML = '<p class="text-white/50 text-sm">Unable to load watch history.</p>';
      }
    }

    document.addEventListener('DOMContentLoaded', loadWatchHistory);
  </script>
</Layout>
